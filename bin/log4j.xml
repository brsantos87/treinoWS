<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "/WEB-INF/log4j.dtd">
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:context="http://www.springframework.org/schema/context"

	<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="true">
	
		<context:property-placeholder location="classpath:system-config.properties" />
		
		<appender name="A1" class="org.apache.log4j.ConsoleAppender">
		  <layout class="org.apache.log4j.PatternLayout"> 
		    <param name="ConversionPattern" value="%d{HH:mm:ss,SSS} %-4r [%t] %-5p %c %x - %m%n"/> 
		  </layout> 
		</appender> 
	
		<appender name="FILE" class="org.apache.log4j.DailyRollingFileAppender">
			<param name="file" value="${catalina.home}/logs/${system.name}.log" />
			<param name="DatePattern" value="'.'dd-MM-yyyy" />
			<param name="MaxBackupIndex" value="10" />
			<layout class="org.apache.log4j.PatternLayout">
				<param name="ConversionPattern" value="[%t] %d{HH:mm:ss,SSS} %-5p %l - %m%n" />
			</layout>
		</appender>
	  
		<root> 
		  <priority value ="ERROR" /> 
		  <appender-ref ref="A1" /> 
		  <appender-ref ref="FILE" />  
		</root>
	
	</log4j:configuration>
</beans>