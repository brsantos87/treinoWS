<!-- FILTER PARA PEGAR AS REQUISIÇÕES DE .XML OU .JSON E FILTRAR OS RETORNOS XML OU JSON UTILIZANDO LISTAS -->
<filter>  
    <filter-name>reqFilter</filter-name>  
    <filter-class>br.com.bssistem.infra.controle.FilterRequest</filter-class>  
</filter> 
<filter-mapping>  
    <filter-name>reqFilter</filter-name>  
    <url-pattern>/treinoWS</url-pattern>  
</filter-mapping>  
</web-app>